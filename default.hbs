<!DOCTYPE html>
<html lang="{{@site.lang}}">
<head>
	{{! Document Settings }}
	<meta charset="utf-8" />
	<meta http-equiv="X-UA-Compatible" content="IE=edge">

	{{! Page Meta }}
	<title>{{meta_title}}</title>
	<meta name="HandheldFriendly" content="True">
	<meta name="viewport" content="width=device-width, initial-scale=1, viewport-fit=cover">

	<link rel="shortcut icon" href='{{asset "favicon.ico"}}'>

	{{! Styles and Scripts }}
	<link rel="stylesheet" type="text/css" href='{{asset "build/styles/style.css"}}'>
	<link rel="stylesheet" type="text/css" href='{{asset "build/styles/prism.css"}}'>
	
	{{! Prefetch next page and previous pages, if they exist }}
	{{#if pagination.next}}<link href="{{page_url pagination.next}}" rel="prefetch">{{/if}}
	{{#if pagination.prev}}<link href="{{page_url pagination.prev}}" rel="prefetch">{{/if}}

	{{! Ghost outputs important style and meta data with this tag }}
    {{ghost_head}}
</head>
<body class='{{body_class}}
	{{#is "home, index, tag, author"}} fancy-header
		{{#if @site.cover_image}} blog-has-cover{{/if}}
		{{#if @site.logo}} blog-has-logo{{/if}}
		{{#if primary_author.cover_image}} author-has-cover{{/if}}
		{{#if primary_author.profile_image}} author-has-image{{/if}}	
		{{#if primary_author.cover_image}}style="background-image: url({{primary_author.cover_image}});"{{else if @site.cover_image}}style="background-image: url({{@site.cover_image}});"{{/if}}
	{{/is}}'>

	<div class="site-main">

		<header class="site-header row">
			<div class="column logo">
				<div class="row logo-row">
					{{#if @site.logo}}<a href="{{@site.url}}"><img class="blog-logo" src="{{@site.logo}}" alt="Blog Logo" /></a>{{/if}}
					<img src='{{asset "images/hacker_chibi_nullsweep_256.png"}}' alt="Hacker Chibi"/>
				</div>
				<!--
				{{#if @site.title}}{{#is "home"}}<h1 class="blog-title">{{@site.title}}</h1>{{else}}<div class="blog-title"><a href="{{@site.url}}">{{@site.title}}</a></div>{{/is}}{{/if}}-->
				<!--
				{{#if @site.description}}<p class="blog-description">{{@site.description}}</p>{{/if}}
			-->
			</div>
			<div class="nav-container">
				<!-- [HAMBURGER menu for mobile] -->
      			<label for="hamburger">&#9776;</label>
      			<input type="checkbox" id="hamburger"/>
				<div class="nav-items">
					{{navigation}}
				</div>
			</div>
		</header>
	
		
		{{! Everything else gets inserted here }}
		{{{body}}}

	<footer class="site-footer">
		<ul class="social-bar">
			<li class="social-bar-icon">
				{{#if @site.twitter}}
				<a class="twitter tooltipable" href="{{twitter_url @site.twitter}}" target="_blank" rel="noopener">{{> "icons/twitter"}}<span class="tooltip">Twitter</span></a>
				{{/if}}
			</li>
			<li class="social-bar-icon">
				<a class="subscribe icon-feed tooltipable" href="{{@site.url}}/rss/"><span class="tooltip">RSS Subscribe</span></a>
			</li>
		</ul>
		<div class="inner">
			<section class="copyright">{{t "All content copyright"}} <a href="{{@site.url}}/">{{@site.title}}</a> &copy; {{date format="YYYY"}} &bull; {{t "All rights reserved."}}</section>
		</div>
	</footer>

	</div> {{! end .site-main }}

	{{#is "post, page"}}
		<script async src='{{asset "build/scripts/main.js"}}'></script>
	{{/is}}

	<script
		src="https://code.jquery.com/jquery-3.5.1.min.js"
		integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0="
		crossorigin="anonymous">
	</script>
    <script type="text/javascript" src='{{asset "build/scripts/prism.js"}}'></script>
