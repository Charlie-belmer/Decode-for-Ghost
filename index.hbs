{{!< default}}

{{#if @blog.cover}}
	<div class="blog-cover" style="background-image: url({{@blog.cover}});"></div>
{{/if}}

{{! Add og tags to meta}}
{{#contentFor "meta"}}
    {{#if @blog.title}}<meta property="og:title" content="{{@blog.title}}" />{{/if}}
    <meta property="og:type" content="website" />
    {{#if @blog.description}}<meta property="og:description" content="{{@blog.description}}"/>{{/if}}
{{/contentFor}}

<div class="site-main home">

<header class="site-header">
	{{#if @blog.logo}}<a class="blog-logo" href="{{@blog.url}}"><img src="{{@blog.logo}}" alt="Blog Logo" /></a>{{/if}}
	{{#if @blog.title}}<h1 class="blog-title"><a href="{{@blog.url}}">{{@blog.title}}</a></h1>{{/if}}
	{{#if @blog.description}}<h2 class="blog-description">{{@blog.description}}</h2>{{/if}}
</header>

{{! The main content area on the homepage }}
<main class="site-content" role="main">

	{{! Each post will be output using this markup }}
	{{#foreach posts}}

	<article class="{{post_class}}">
		<header class="post-header">
			<h2 class="post-title"><a href="{{url}}">{{title}}</a></h2>
			<a class="post-meta" href="{{url}}">Posted on <time datetime="{{date format='YYYY-MM-DD'}}">{{date format="DD MMMM YYYY"}}</time></a>
		</header>
		
		<section class="post-excerpt">
			{{content words="0"}}
			<p>{{excerpt}}</p>
		</section>
		
		<footer class="post-footer">
			<div class="post-tags">Tagged with: {{tags separator=", "}}</div>
		</footer> 
	</article>

	{{/foreach}}

	{{!! After all the posts, we have the previous/next pagination links }}
	{{pagination}}

</main>