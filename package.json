{
	"name": "nullsweep-decode",
	"version": "1.0.0",
	"description": "A minimal, modern Ghost blog theme, based on Decode for Ghost.",
	"keywords": [
		"ghost",
		"theme",
		"ghost-theme"
	],
	"author": {
		"name": "Scott Smith",
		"email": "mail@ScottHSmith.com",
		"url": "https://ScottHSmith.com"
	},
	"license": "MIT",
	"engines": {
		"ghost-api": "v3"
	},
	"gpm": {
		"type": "theme",
		"categories": [
			"Minimal",
			"Personal Blogs"
		]
	},
	"demo": "https://decode-ghost-demo.scotthsmith.com/",
	"homepage": "https://scotthsmith.com/miscellanea/decode-archive/",
	"repository": {
		"type": "git",
		"url": "https://github.com/ScottSmith95/Decode-for-Ghost.git"
	},
	"scripts": {
		"build": "gulp build",
		"dist": "gulp bundle",
		"test": "gscan ./"
	},
	"devDependencies": {
		"autoprefixer": "^9.8.6",
		"css-mqpacker": "^7.0.0",
		"cssnano": "^4.1.10",
		"gscan": "^3.5.6",
		"gulp": "^4.0.2",
		"gulp-postcss": "^8.0.0",
		"gulp-sourcemaps": "^2.6.5",
		"gulp-terser-js": "^5.2.2",
		"gulp-uglify": "^3.0.2",
		"gulp-zip": "^5.0.2",
		"postcss-custom-properties": "^9.1.1",
		"postcss-import": "^12.0.1",
		"postcss-nested": "^4.2.3",
		"postcss-normalize": "^9.0.0"
	},
	"browserslist": [
		"last 2 versions",
		"> 2.5%",
		"Firefox ESR"
	],
	"config": {
		"posts_per_page": 10,
		"image_sizes": {
	        "xxs": {
	            "width": 30
	        },
	        "xs": {
	            "width": 100
	        },
	        "s": {
	            "width": 300
	        },
	        "m": {
	            "width": 600
	        },
	        "l": {
	            "width": 1000
	        },
	        "xl": {
	            "width": 2000
	        }
    }
	},
	"dependencies": {
		"gulp-cli": "^2.3.0"
	}
}
